#include <dt-bindings/zmk/reset.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    combos {
        compatible = "zmk,combos";

        combo_cmd_tilde {
            bindings = <&kp LG(TILDE)>;
            key-positions = <55 0>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        macos_layer {
            // ------------------------------------------------------------------------------------------
            // | ESC |  1  |  2  |  3  |  4  |  5  |  6  |  7  |  8  |  9  |  0  |  -  |  =  |   BKSP   |
            // | TAB  |  Q  |  W  |  E  |  R  |  T  |  Y  |  U  |  I  |  O  |  P  |  [  |  ]  |   "|"   |
            // | TOG(1) |  A  |  S  |  D  |  F  |  G  |  H  |  J  |  K  |  L  |  ;  |  '  |    ENTER    |
            // |  SHIFT  |  Z  |  X  |  C  |  V  |  B  |  N  |  M  |  ,  |  .  |  /  |      SHIFT       |
            // |  CTL  |  ALT  |  WIN  |            SPACE              |  WIN  |   MO(1) | ALT  |  CTL  |
            // ------------------------------------------------------------------------------------------

            bindings = <
&gresc     &kp N1     &kp N2    &kp N3    &kp N4     &kp N5    &kp N6  &kp N7    &kp N8     &kp N9   &kp N0    &kp MINUS  &kp EQUAL  &kp BSPC
&kp TAB    &kp Q      &kp W     &kp E     &kp R      &kp T     &kp Y   &kp U     &kp I      &kp O    &kp P     &kp LBKT   &kp RBKT   &kp BSLH
&mo 2      &kp A      &kp S     &kp D     &kp F      &kp G     &kp H   &kp J     &kp K      &kp L    &kp SEMI  &kp SQT    &kp RET
&kp LSHFT  &kp Z      &kp X     &kp C     &kp V      &kp B     &kp N   &kp M     &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
           &kp LCTRL  &kp LALT  &kp LGUI  &kp SPACE  &kp RGUI  &mo 2   &kp RALT  &kp RCTRL
            >;
        };

        windows_layer {
            bindings = <
&gresc     &kp N1     &kp N2        &kp N3        &kp N4     &kp N5         &kp N6  &kp N7         &kp N8     &kp N9   &kp N0    &kp MINUS  &kp EQUAL  &kp BSPC
&kp TAB    &kp Q      &kp W         &kp E         &kp R      &kp T          &kp Y   &kp U          &kp I      &kp O    &kp P     &kp LBKT   &kp RBKT   &kp BSLH
&mo 2      &kp A      &kp S         &kp D         &kp F      &kp G          &kp H   &kp J          &kp K      &kp L    &kp SEMI  &kp SQT    &kp RET
&kp LSHFT  &kp Z      &kp X         &kp C         &kp V      &kp B          &kp N   &kp M          &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
           &kp LCTRL  &kp LEFT_GUI  &kp LEFT_ALT  &kp SPACE  &kp RIGHT_ALT  &mo 2   &kp RIGHT_GUI  &kp RCTRL
            >;
        };

        function_layer {
            // ------------------------------------------------------------------------------------------------
            // |   `    | F1  | F2  | F3  | F4  | F5  | F6  | F7  | F8  | F9  | F10  | F11 | F12 |      DEL   |
            // |         |   |  UP |    |      |       |       |       |  UP  |    |    |    |    |           |
            // |          | LT |  DN  | RT |       |       |     |  LT  |  DN   | RT |    |     |             |
            // |             |     |      |      |     |     |     |     |     |     |     |                  |
            // |         |      |      |                                    |        |     |  MO(2)   |       |
            // ------------------------------------------------------------------------------------------------

            bindings = <
&kp TILDE  &kp F1    &kp F2    &kp F3     &kp F4           &kp F5  &kp F6  &kp F7           &kp F8           &kp F9           &kp F10     &kp F11  &kp F12  &kp DEL
&trans     &kp HOME  &kp UP    &kp END    &kp PAGE_UP      &trans  &trans  &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp KP_NUM  &trans   &trans   &kp PSCRN
&trans     &kp LEFT  &kp DOWN  &kp RIGHT  &kp PAGE_DOWN    &trans  &trans  &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &trans      &trans   &kp INS
&trans     &trans    &trans    &trans     &trans           &trans  &trans  &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &trans      &trans
           &kp F13   &kp F14   &kp F15    &kp KP_NUMBER_0  &trans  &trans  &mo 3            &trans
            >;
        };

        settings_layer {
            //  ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
            //  | BT_CLR     | BT_0       | BT_1       | BT_2       | BT_3       |            |            |            |            |            |            | BOOTLOADER | RESET      |            |
            //  |            |            |            |            |            |            |            |            |            |            |            |            |            |            |
            //  |            |            |            |            |            |            |            |            |            |            |            |            |                         |
            //  |                         |            |            |            |            |            |            |            |            |            |            |                         |
            //  |            |            |            |                                                                                          |            |            |            |            |
            //  ---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

            bindings = <
&bt BT_CLR  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans       &trans
&trans      &out OUT_BLE  &out OUT_USB  &trans        &trans        &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans       &sys_reset
&trans      &trans        &trans        &trans        &trans        &trans  &trans  &trans  &trans  &trans  &trans  &trans  &bootloader
&trans      &trans        &trans        &trans        &trans        &trans  &trans  &trans  &trans  &trans  &trans  &trans
            &trans        &trans        &trans        &tog 1        &trans  &trans  &trans  &trans
            >;
        };
    };
};
